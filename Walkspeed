--// JDI Fly + Noclip + TP + ESP + Tracers + Infinite Jump + Rejoin + Version GUI

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local TeleportService = game:GetService("TeleportService")
local LocalPlayer = Players.LocalPlayer

-- VARIABLES
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HRP = Character:WaitForChild("HumanoidRootPart")
local flying, noclip = false, false
local flySpeed = 50
local minSpeed, maxSpeed = 10, 1000
local espEnabled, tracersEnabled = false, false
local infiniteJumpEnabled = false -- START OFF
local espBoxes, espLabels, tracerParts = {}, {}, {}

-- HANDLE CHARACTER RESPAWN
local function onCharacterAdded(char)
    Character = char
    HRP = char:WaitForChild("HumanoidRootPart")
end
LocalPlayer.CharacterAdded:Connect(onCharacterAdded)
if LocalPlayer.Character then onCharacterAdded(LocalPlayer.Character) end

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "JDIGUI"
gui.ResetOnSpawn = false
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- MAIN FRAME
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,220,0,460)
frame.Position = UDim2.new(0.5,-110,0.5,-230)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0,12)
frameCorner.Parent = frame

-- TITLE BAR
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1,0,0,30)
titleBar.BackgroundColor3 = Color3.fromRGB(45,45,45)
titleBar.Parent = frame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0,12)
titleCorner.Parent = titleBar

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,-80,1,0)
title.Position = UDim2.new(0,10,0,0)
title.BackgroundTransparency = 1
title.Text = "JDI GUI"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = titleBar

-- MINIMIZE & CLOSE
local minimizeBtn = Instance.new("TextButton")
minimizeBtn.Size = UDim2.new(0,20,0,20)
minimizeBtn.Position = UDim2.new(1,-60,0,5)
minimizeBtn.Text = "-"
minimizeBtn.Font = Enum.Font.SourceSansBold
minimizeBtn.TextSize = 18
minimizeBtn.TextColor3 = Color3.fromRGB(255,255,255)
minimizeBtn.BackgroundColor3 = Color3.fromRGB(80,80,80)
minimizeBtn.Parent = titleBar

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0,20,0,20)
closeBtn.Position = UDim2.new(1,-35,0,5)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.SourceSansBold
closeBtn.TextSize = 16
closeBtn.TextColor3 = Color3.fromRGB(255,255,255)
closeBtn.BackgroundColor3 = Color3.fromRGB(170,60,60)
closeBtn.Parent = titleBar

-- SPEED LABEL
local speedLabel = Instance.new("TextLabel")
speedLabel.Size = UDim2.new(1,-20,0,25)
speedLabel.Position = UDim2.new(0,10,0,40)
speedLabel.BackgroundTransparency = 1
speedLabel.Text = "Speed: "..flySpeed
speedLabel.TextColor3 = Color3.fromRGB(200,200,200)
speedLabel.Font = Enum.Font.SourceSans
speedLabel.TextSize = 16
speedLabel.Parent = frame

-- CLICK SOUND FUNCTION
local function addClickSound(btn)
	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://452267918"
	sound.Volume = 1
	sound.Parent = btn
	btn.MouseButton1Click:Connect(function()
		sound:Play()
	end)
end

-- BUTTON CREATOR
local function createButton(text,y)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1,-20,0,30)
	btn.Position = UDim2.new(0,10,0,y)
	btn.BackgroundColor3 = Color3.fromRGB(60,60,60)
	btn.Text = text
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 16
	btn.Parent = frame

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0,8)
	corner.Parent = btn

	addClickSound(btn)
	return btn
end

-- CREATE BUTTONS
local flyButton = createButton("Fly: OFF",70)
local plusButton = createButton("Speed +",110)
local minusButton = createButton("Speed -",150)
local noclipButton = createButton("Noclip: OFF",190)
local espButton = createButton("ESP: OFF",230)
local tracersButton = createButton("Tracers: OFF",270)
local infJumpButton = createButton("Infinite Jump: OFF",310)
local rejoinButton = createButton("Rejoin Server",390)

-- SUBSCRIBE & VERSION LABEL
local subscribe = Instance.new("TextLabel")
subscribe.Size = UDim2.new(1,-20,0,25)
subscribe.Position = UDim2.new(0,10,0,350)
subscribe.BackgroundTransparency = 1
subscribe.Text = "Subscribe to @kidonvrrl on YT!"
subscribe.TextColor3 = Color3.fromRGB(255,255,255)
subscribe.Font = Enum.Font.SourceSansBold
subscribe.TextSize = 16
subscribe.TextXAlignment = Enum.TextXAlignment.Center
subscribe.Parent = frame

local version = Instance.new("TextLabel")
version.Size = UDim2.new(1,-20,0,20)
version.Position = UDim2.new(0,10,0,425)
version.BackgroundTransparency = 1
version.Text = "JDI GUI v1.5 | by kidonvrrl"
version.TextColor3 = Color3.fromRGB(200,200,200)
version.Font = Enum.Font.SourceSans
version.TextSize = 14
version.TextXAlignment = Enum.TextXAlignment.Center
version.Parent = frame

-- MINI BUTTON
local miniButton = Instance.new("TextButton")
miniButton.Size = UDim2.new(0,50,0,50)
miniButton.Position = frame.Position
miniButton.Text = "JDI"
miniButton.Font = Enum.Font.SourceSansBold
miniButton.TextSize = 16
miniButton.TextColor3 = Color3.fromRGB(255,255,255)
miniButton.BackgroundColor3 = Color3.fromRGB(45,45,45)
miniButton.Visible = false
miniButton.Active = true
miniButton.Parent = gui

local miniCorner = Instance.new("UICorner")
miniCorner.CornerRadius = UDim.new(0,12)
miniCorner.Parent = miniButton

-- MINI DRAG
local dragging = false
local offset = Vector2.zero
miniButton.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		offset = UserInputService:GetMouseLocation() - miniButton.AbsolutePosition
	end
end)
miniButton.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = false
	end
end)
RunService.RenderStepped:Connect(function()
	if dragging then
		local mouse = UserInputService:GetMouseLocation()
		miniButton.Position = UDim2.new(0, mouse.X - offset.X, 0, mouse.Y - offset.Y)
	end
end)

-- FLY FUNCTIONS
local bodyVelocity, bodyGyro
local function startFly()
	flying = true
	bodyVelocity = Instance.new("BodyVelocity")
	bodyVelocity.MaxForce = Vector3.new(1e6,1e6,1e6)
	bodyVelocity.Parent = HRP

	bodyGyro = Instance.new("BodyGyro")
	bodyGyro.MaxTorque = Vector3.new(1e6,1e6,1e6)
	bodyGyro.P = 1e6
	bodyGyro.Parent = HRP
end
local function stopFly()
	flying = false
	if bodyVelocity then bodyVelocity:Destroy() end
	if bodyGyro then bodyGyro:Destroy() end
end

-- BUTTON LOGIC
flyButton.MouseButton1Click:Connect(function()
	if flying then stopFly() flyButton.Text="Fly: OFF" else startFly() flyButton.Text="Fly: ON" end
end)
plusButton.MouseButton1Click:Connect(function()
	flySpeed = math.clamp(flySpeed+10,minSpeed,maxSpeed)
	speedLabel.Text="Speed: "..flySpeed
end)
minusButton.MouseButton1Click:Connect(function()
	flySpeed = math.clamp(flySpeed-10,minSpeed,maxSpeed)
	speedLabel.Text="Speed: "..flySpeed
end)
noclipButton.MouseButton1Click:Connect(function()
	noclip = not noclip
	noclipButton.Text = noclip and "Noclip: ON" or "Noclip: OFF"
end)
espButton.MouseButton1Click:Connect(function()
	espEnabled = not espEnabled
	espButton.Text = espEnabled and "ESP: ON" or "ESP: OFF"
	if not espEnabled then
		for _,v in pairs(espBoxes) do v:Destroy() end
		for _,v in pairs(espLabels) do v:Destroy() end
		espBoxes, espLabels = {}, {}
	end
end)
tracersButton.MouseButton1Click:Connect(function()
	tracersEnabled = not tracersEnabled
	tracersButton.Text = tracersEnabled and "Tracers: ON" or "Tracers: OFF"
	if not tracersEnabled then
		for _,v in pairs(tracerParts) do v:Destroy() end
		tracerParts = {}
	end
end)
infJumpButton.MouseButton1Click:Connect(function()
	infiniteJumpEnabled = not infiniteJumpEnabled
	infJumpButton.Text = infiniteJumpEnabled and "Infinite Jump: ON" or "Infinite Jump: OFF"
end)
rejoinButton.MouseButton1Click:Connect(function()
	local placeId = game.PlaceId
	local jobId = game.JobId
	TeleportService:TeleportToPlaceInstance(placeId, jobId, LocalPlayer)
end)

-- MINIMIZE & CLOSE
minimizeBtn.MouseButton1Click:Connect(function()
	miniButton.Position = frame.Position
	frame.Visible = false
	miniButton.Visible = true
end)
miniButton.MouseButton1Click:Connect(function()
	frame.Position = miniButton.Position
	frame.Visible = true
	miniButton.Visible = false
end)
closeBtn.MouseButton1Click:Connect(function()
	stopFly()
	noclip = false
	gui:Destroy()
end)

-- FLY MOVEMENT
RunService.RenderStepped:Connect(function()
	if flying and bodyVelocity and bodyGyro then
		local cam = Workspace.CurrentCamera
		local dir = Vector3.zero
		if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += cam.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= cam.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= cam.CFrame.RightVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += cam.CFrame.RightVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.Space) then dir += Vector3.new(0,1,0) end
		if UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then dir -= Vector3.new(0,1,0) end
		bodyVelocity.Velocity = dir.Magnitude > 0 and dir.Unit*flySpeed or Vector3.zero
		bodyGyro.CFrame = CFrame.new(HRP.Position, HRP.Position + Workspace.CurrentCamera.CFrame.LookVector)
	end
end)

-- INFINITE JUMP
UserInputService.JumpRequest:Connect(function()
	if infiniteJumpEnabled and Character:FindFirstChildOfClass("Humanoid") then
		local humanoid = Character:FindFirstChildOfClass("Humanoid")
		humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
	end
end)

-- NOCLIP
RunService.Stepped:Connect(function()
	if noclip then
		for _,p in pairs(Character:GetDescendants()) do
			if p:IsA("BasePart") then p.CanCollide=false end
		end
	end
end)

-- ESP & TRACERS (continuous)
RunService.RenderStepped:Connect(function()
	for _,plr in pairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
			local hrp = plr.Character.HumanoidRootPart
			local dist = math.floor((HRP.Position-hrp.Position).Magnitude)

			-- ESP
			if espEnabled then
				if not espBoxes[plr] then
					local box = Instance.new("BoxHandleAdornment")
					box.Adornee = plr.Character
					box.Size = Vector3.new(3,6,2)
					box.Color = BrickColor.new("Bright red")
					box.AlwaysOnTop = true
					box.ZIndex = 10
					box.Parent = Workspace
					espBoxes[plr] = box
				end
				if not espLabels[plr] then
					local guiBill = Instance.new("BillboardGui")
					guiBill.Size = UDim2.new(0,350,0,40)
					guiBill.StudsOffset = Vector3.new(0,5,0)
					guiBill.AlwaysOnTop = true
					guiBill.Adornee = hrp
					local txt = Instance.new("TextLabel")
					txt.Size = UDim2.new(1,0,1,0)
					txt.BackgroundTransparency = 1
					txt.TextColor3 = Color3.fromRGB(255,0,0)
					txt.Font = Enum.Font.SourceSansBold
					txt.TextSize = 26
					txt.TextXAlignment = Enum.TextXAlignment.Center
					txt.TextYAlignment = Enum.TextYAlignment.Center
					txt.Parent = guiBill
					guiBill.Parent = hrp
					espLabels[plr] = txt
				end
				espLabels[plr].Text = "@"..plr.Name.." | "..plr.DisplayName.." | "..dist.." studs"
			elseif espLabels[plr] then
				espLabels[plr].Parent:Destroy()
				espLabels[plr] = nil
			end

			-- TRACERS
			if tracersEnabled then
				if not tracerParts[plr] then
					local part = Instance.new("Part")
					part.Anchored = true
					part.CanCollide = false
					part.Transparency = 0.5
					part.Material = Enum.Material.Neon
					part.Color = Color3.fromRGB(255,0,0)
					part.Size = Vector3.new(0.1,0.1,0.1)
					part.Parent = Workspace
					tracerParts[plr] = part
				end
				local startPos = HRP.Position
				local endPos = hrp.Position
				local dist = (endPos-startPos).Magnitude
				local part = tracerParts[plr]
				part.Size = Vector3.new(0.1,0.1,dist)
				part.CFrame = CFrame.new(startPos,endPos)*CFrame.new(0,0,-dist/2)
			elseif tracerParts[plr] then
				tracerParts[plr]:Destroy()
				tracerParts[plr] = nil
			end
		end
	end
end)
